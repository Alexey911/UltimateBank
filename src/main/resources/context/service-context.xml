<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean name="currencyService" class="com.zhytnik.bank.service.impl.CurrencyService"
          p:manager-ref="currencyManager"/>

    <bean name="currencyConverter" class="com.zhytnik.bank.web.converter.CurrencyConverter"
          p:service-ref="currencyService"/>

    <bean name="departmentService" class="com.zhytnik.bank.service.impl.DepartmentService"
          p:manager-ref="departmentManager"/>

    <bean name="foundService" class="com.zhytnik.bank.service.impl.FoundService"
          p:manager-ref="foundManager"/>

    <bean name="foundConverter" class="com.zhytnik.bank.web.converter.FoundConverter"
          p:service-ref="foundService"/>
</beans>