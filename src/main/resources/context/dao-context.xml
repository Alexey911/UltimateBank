<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean name="connectionManager" class="com.zhytnik.bank.backend.manager.impl.ConnectionManager"/>

    <bean name="currencyManager" class="com.zhytnik.bank.backend.manager.impl.CurrencyManager"/>

    <bean name="foundManager" class="com.zhytnik.bank.backend.manager.impl.EntityManager"
          c:clazz="com.zhytnik.bank.domain.Found"/>

    <bean name="departmentManager" class="com.zhytnik.bank.backend.manager.impl.EntityManager"
          c:clazz="com.zhytnik.bank.domain.Department"/>

    <bean name="bankerManager" class="com.zhytnik.bank.backend.manager.impl.EntityManager"
          c:clazz="com.zhytnik.bank.domain.Banker"/>

    <bean name="clientManager" class="com.zhytnik.bank.backend.manager.impl.EntityManager"
          c:clazz="com.zhytnik.bank.domain.Client"/>

    <bean name="depositManager" class="com.zhytnik.bank.backend.manager.impl.EntityManager"
          c:clazz="com.zhytnik.bank.domain.Deposit"/>

    <bean name="billManager" class="com.zhytnik.bank.backend.manager.impl.EntityManager"
          c:clazz="com.zhytnik.bank.domain.Bill"/>

    <bean name="billCardManager" class="com.zhytnik.bank.backend.manager.impl.EntityManager"
          c:clazz="com.zhytnik.bank.domain.card.BillCard"/>

    <bean name="creditManager" class="com.zhytnik.bank.backend.manager.impl.EntityManager"
          c:clazz="com.zhytnik.bank.domain.Credit"/>

    <bean name="creditCardManager" class="com.zhytnik.bank.backend.manager.impl.EntityManager"
          c:clazz="com.zhytnik.bank.domain.card.CreditCard"/>
</beans>